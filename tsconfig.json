{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",  
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true
  },
  "types": [
    "node",
    "jest",
    "express",
    "@types/socket.io",
    "express-session"
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
